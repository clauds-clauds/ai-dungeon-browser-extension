{
    "manifest_version": 3,
    "name": "Dungeon Extension",
    "version": "2.2.1",
    "description": "An extension which adds some quality of life features to your AI Dungeon adventures.",
    "author": "clauds-clauds",
    "permissions": [
        "storage"
    ],
    "icons": {
        "16": "icons/icon_tiny.png",
        "32": "icons/icon_small.png",
        "48": "icons/icon_medium.png",
        "96": "icons/icon_medium_large.png",
        "128": "icons/icon_large.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'none';"
    },
    "content_scripts": [
        {
            "matches": [
                "https://play.aidungeon.com/*",
                "https://beta.aidungeon.com/*"
            ],
            "js": [
                "scripts/external/sortable.min.js",
                "scripts/components/panel.js",
                "scripts/config.js",
                "scripts/components/tooltip.js",
                "scripts/utils.js",
                "scripts/store.js",
                "scripts/components/panels/character.js",
                "scripts/components/text_effects.js",
                "scripts/components/panels/settings.js",
                "scripts/components/panels/notes.js",
                "scripts/components/panels/share.js",
                "scripts/events.js",
                "scripts/components/panels/menu.js",
                "scripts/inject.js",
                "scripts/run.js"
            ],
            "css": [
                "styles/style.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "resources/panels/character_panel.html",
                "resources/panels/notes_panel.html",
                "resources/panels/settings_panel.html",
                "resources/panels/share_panel.html",
                "resources/panels/menu_panel.html",
                "fonts/material_symbols_rounded.ttf"
            ],
            "matches": [
                "https://play.aidungeon.com/*",
                "https://beta.aidungeon.com/*"
            ]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "dungeon-extension@clauds-clauds",
            "strict_min_version": "109.0"
        }
    }
}