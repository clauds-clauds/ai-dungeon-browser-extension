{
    "manifest_version": 3,
    "name": "Dungeon Extension",
    "version": "3.0.1",
    "description": "Here be dragons...",
    "author": "clauds-clauds",
    "permissions": [
        "storage"
    ],
    "icons": {
        "16": "icons/de_tiny.png",
        "32": "icons/de_small.png",
        "48": "icons/de_medium.png",
        "96": "icons/de_medium_large.png",
        "128": "icons/de_large.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'none';"
    },
    "content_scripts": [
        {
            "matches": [
                "https://play.aidungeon.com/*",
                "https://beta.aidungeon.com/*"
            ],
            "js": [
                "scripts/libraries/dexie/dexie.js",
                "scripts/libraries/sortable/sortable.js",
                "scripts/other/persistent_storage.js",
                "scripts/other/configuration.js",
                "scripts/other/custom_debugger.js",
                "scripts/helpers/discover.js",
                "scripts/helpers/utilities.js",
                "scripts/helpers/inject.js",
                "scripts/controls/text_effects.js",
                "scripts/controls/tooltip.js",
                "scripts/events.js"
            ],
            "css": [
                "styles/style.css",
                "styles/root.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "fonts/material_symbols_rounded.ttf"
            ],
            "matches": [
                "https://play.aidungeon.com/*",
                "https://beta.aidungeon.com/*"
            ]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "dungeon-extension@clauds-clauds",
            "strict_min_version": "109.0",
            "data_collection_permissions": {
                "required": [
                    "none"
                ]
            }
        }
    }
}