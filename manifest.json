{
    "manifest_version": 3,
    "name": "Dungeon Extension",
    "version": "3.0.0",
    "description": "Here be dragons...",
    "author": "clauds-clauds",
    "permissions": [
        "storage"
    ],
    "icons": {
        "16": "icons/de_tiny.png",
        "32": "icons/de_small.png",
        "48": "icons/de_medium.png",
        "96": "icons/de_medium_large.png",
        "128": "icons/de_large.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'none';"
    },
    "content_scripts": [
        {
            "matches": [
                "https://play.aidungeon.com/*",
                "https://beta.aidungeon.com/*"
            ],
            "js": [
                "scripts/lib/sortable.js",
                "scripts/lib/dexie.js",
                "scripts/config.js",
                "scripts/storage.js",
                "scripts/events.js",
                "scripts/helpers/interface.js",
                "scripts/helpers/utils.js",
                "scripts/helpers/find.js",
                "scripts/helpers/log.js",
                "scripts/helpers/inject.js",
                "scripts/components/tooltip.js",
                "scripts/components/text_effects.js",
                "scripts/components/entity_editor.js",
                "scripts/components/entity_renderer.js",
                "scripts/components/menu.js",
                "scripts/run.js"
            ],
            "css": [
                "themes/external.css",
                "themes/random.css",
                "themes/tooltip.css",
                "themes/entity_editor.css",
                "themes/entity_renderer.css",
                "themes/root.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "injectables/entity_editor.html",
                "injectables/entity_renderer.html",
                "injectables/menu.html",
                "injectables/tooltip.html",
                "fonts/material_symbols_rounded.ttf"
            ],
            "matches": [
                "https://play.aidungeon.com/*",
                "https://beta.aidungeon.com/*"
            ]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "dungeon-extension@clauds-clauds",
            "strict_min_version": "109.0",
            "data_collection_permissions": {
                "required": [
                    "none"
                ]
            }
        }
    }
}