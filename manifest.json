{
    "manifest_version": 3,
    "name": "Dungeon Extension",
    "version": "3.2.1",
    "description": "Here be dragons...",
    "author": "clauds-clauds",
    "permissions": [
        "storage"
    ],
    "icons": {
        "16": "icons/de_tiny.png",
        "32": "icons/de_small.png",
        "48": "icons/de_medium.png",
        "96": "icons/de_medium_large.png",
        "128": "icons/de_large.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'none';"
    },
    "content_scripts": [
        {
            "matches": [
                "https://play.aidungeon.com/*",
                "https://beta.aidungeon.com/*"
            ],
            "js": [
                "scripts/libraries/dexie/dexie.js",
                "scripts/libraries/sortable/sortable.js",
                "scripts/core/configuration.js",
                "scripts/core/persistent_storage.js",
                "scripts/core/custom_debugger.js",
                "scripts/helpers/discover.js",
                "scripts/helpers/utilities.js",
                "scripts/helpers/page.js",
                "scripts/helpers/construct.js",
                "scripts/helpers/inject.js",
                "scripts/controls/menu.js",
                "scripts/controls/text_effects.js",
                "scripts/controls/tooltip.js",
                "scripts/controls/editor.js",
                "scripts/controls/renderer.js",
                "scripts/action_map.js",
                "scripts/events.js"
            ],
            "css": [
                "styles/legacy/entity_editor.css",
                "styles/legacy/refactor.css",
                "styles/mobile.css",
                "styles/random.css",
                "styles/custom.css",
                "styles/root.css",
                "styles/vanilla.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "components/snippets/hidden/raven_snippet.html",
                "components/snippets/database/import_snippet.html",
                "components/snippets/database/export_snippet.html",
                "components/snippets/database/recover_snippet.html",
                "components/snippets/editor/entity_snippet.html",
                "components/snippets/editor/image_snippet.html",
                "components/snippets/editor/notes_snippet.html",
                "components/snippets/settings/general_snippet.html",
                "components/snippets/settings/text_snippet.html",
                "components/snippets/settings/tooltip_snippet.html",
                "components/snippets/settings/danger_snippet.html",
                "components/chunks/renderer_chunk.html",
                "components/chunks/editor_chunk.html",
                "components/chunks/settings_chunk.html",
                "components/chunks/database_chunk.html",
                "components/chunks/hidden_chunk.html",
                "components/menu.html",
                "components/backdrop.html",
                "fonts/material_symbols_rounded.ttf"
            ],
            "matches": [
                "https://play.aidungeon.com/*",
                "https://beta.aidungeon.com/*"
            ]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "dungeon-extension@clauds-clauds",
            "strict_min_version": "109.0",
            "data_collection_permissions": {
                "required": [
                    "none"
                ]
            }
        }
    }
}