{
    "manifest_version": 3,
    "name": "Dungeon Extension",
    "version": "1.0.0",
    "description": "A browser plugin which aims to add some nice QoL features to AI Dungeon.",
    "permissions": [
        "storage"
    ],
    "icons": {
        "48": "icons/icon_medium.png",
        "128": "icons/icon_large.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://play.aidungeon.com/*",
                "https://beta.aidungeon.com/*"
            ],
            "js": [
                "scripts/config.js",
                "scripts/global.js",
                "scripts/modules/character.js",
                "scripts/modules/highlight.js",
                "scripts/modules/buttons.js",
                "scripts/modules/interface.js",
                "scripts/run.js"
            ],
            "css": [
                "styles/extension_style.css"
            ]
        }
    ],
    "host_permissions": [
        "https://fonts.googleapis.com/",
        "https://fonts.gstatic.com/"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "resources/editor_character.html"
            ],
            "matches": [
                "https://play.aidungeon.com/*",
                "https://beta.aidungeon.com/*"
            ]
        }
    ]
}